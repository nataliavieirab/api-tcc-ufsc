// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  name String
  last_name String
  birth_date String
  cpf String
  email String
  password String
  user_name String
  roles UserRole[]
  franchise Franchise[]
}

enum UserRole {
  GENERAL_ADM
  FRANCH_ADM
  BRANCH_ADM
  WAITER
  MANAGER
  RECEPTIONIST
  CASHIER
  DELIVERY_ATTENDANT
}

model Franchise {
  id String @id
  name String
  cnpj String
  address String
  number Int
  complement String
  neighborhood String
  city String
  state String
  country String
  zip_code String
  phone String
  email String
  adm_id String
  adm User @relation(fields: [adm_id], references: [id])
}
