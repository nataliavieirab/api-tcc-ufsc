// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  name String
  last_name String
  birth_date DateTime
  cpf String
  email String @unique
  password String
  user_name String @unique
  role UserRole
  franchise Franchise?
  organization_id String? @unique
  organization Organization? @relation(fields: [organization_id], references: [id])
}

enum UserRole {
  GENERAL_ADM
  GENERAL_ASSISTANT
  ORGANIZATION_ADM
  ORGANIZATION_ASSISTANT
  FRANCH_ADM
  FRANCH_ASSISTANT
  BRANCH_ADM
  WAITER
  MANAGER
  RECEPTIONIST
  CASHIER
  DELIVERY_ATTENDANT
}
model Organization {organization_id
  id String @id
  name String
  cnpj String
  address String
  number Int
  complement String
  neighborhood String
  city String
  state String
  country String
  zip_code String
  phone String
  email String
  users User[]
  franchises Franchise[]
}

model Franchise {
  id String @id
  name String
  cnpj String
  address String
  number Int
  complement String
  neighborhood String
  city String
  state String
  country String
  zip_code String
  phone String
  email String
  adm_id String @unique
  adm User @relation(fields: [adm_id], references: [id])
  organization_id String? @unique
  organization Organization? @relation(fields: [organization_id], references: [id])
}